<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.dmart.enterprise.refilling">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".ui.lib.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RefillingApp">
        <activity
            android:name=".ui.view.activity.task.create.ScanArticleActivity"
            android:label="@string/title_activity_scan_article"
            android:theme="@style/Theme.RefillingApp.NoActionBar"></activity>
        <activity
            android:name=".ui.view.activity.task.review.ReviewTaskArticleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.task.review.ReviewTaskRowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.task.create.CreateTaskRowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.task.create.CreateTaskArticleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.dashboard.DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.task.create.dashboard.CreateTaskDashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.activity.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>