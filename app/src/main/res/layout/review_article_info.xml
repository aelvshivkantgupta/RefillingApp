<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="in.dmart.enterprise.refilling.model.apimodel.task.review.article.response.LastRefillingDetail" />
    </data>
    <in.dmart.enterprise.refilling.ui.lib.view.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5dp"
                >

                    <in.dmart.enterprise.refilling.ui.lib.view.CustomTextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_refilling_details"
                        android:textStyle="bold"
                        android:textSize="@dimen/medium_text_size"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <in.dmart.enterprise.refilling.ui.lib.view.LblTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user"
                        />
                    <in.dmart.enterprise.refilling.ui.lib.view.CustomTextView
                        android:id="@+id/user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@{model.user}"/>
                </LinearLayout>


                    <LinearLayout
                        android:id="@+id/stockInHandLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <in.dmart.enterprise.refilling.ui.lib.view.LblTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qty"
                            />
                        <in.dmart.enterprise.refilling.ui.lib.view.CustomTextView
                            android:id="@+id/qty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="@{model.qty}"
                           />
                    </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <in.dmart.enterprise.refilling.ui.lib.view.LblTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time"
                        />
                    <in.dmart.enterprise.refilling.ui.lib.view.CustomTextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@{model.time}"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <in.dmart.enterprise.refilling.ui.lib.view.LblTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        />
                    <in.dmart.enterprise.refilling.ui.lib.view.CustomTextView
                        android:id="@+id/comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@{model.comment}"/>
                </LinearLayout>

            </LinearLayout>
    </in.dmart.enterprise.refilling.ui.lib.view.CustomCardView>
</layout>